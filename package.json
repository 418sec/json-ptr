{
  "name": "json-ptr",
  "version": "1.0.1",
  "author": "Phillip Clark <phillip@flitbit.com>",
  "description": "A complete implementation of JSON Pointer (RFC 6901) for nodejs and modern browsers.",
  "keywords": [
    "6901",
    "json",
    "pointers",
    "fragmentid"
  ],
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flitbit/json-ptr"
  },
  "scripts": {
    "prebuild": "npm run clean && npm run lint",
    "build": "echo no build",
    "clean": "rimraf dist",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "prestart": "npm run build",
    "start": "node index.js",
    "pretest": "npm run build",
    "test": "mocha test/**/*.js",
    "test:watch": "nodemon --ext js,json --ignore dist/ --exec \"npm test\"",
    "ci": "npm run test",
    "lint": "eslint src test"
  },
  "devDependencies": {
    "bluebird": "^3.5.1",
    "eslint": "^4.18.1",
    "eslint-plugin-mocha": "^4.11.0",
    "expect.js": "^0.3.1",
    "json": "^9.0.6",
    "mocha": "^5.0.1",
    "nodemon": "^1.15.1",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.3.12"
  }
}
